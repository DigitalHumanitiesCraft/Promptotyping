    },
    {
      "type": "best-practice-list",
      "practices": [
        {
          "title": "Start with CONTEXT",
          "description": "Always begin with clear project definition in README.md"
        },
        {
          "title": "Document Everything",
          "description": "Use JOURNAL.md for every interaction with LLMs"
        },
        {
          "title": "Embrace Savepoints",
          "description": "Create explicit checkpoints between phases"
        },
        {
          "title": "Recognize Limits",
          "description": "Switch to manual coding when below 90% efficiency"
        },
        {
          "title": "Verify Systematically",
          "description": "Use multi-model verification for critical components"
        }
      ]
    },
